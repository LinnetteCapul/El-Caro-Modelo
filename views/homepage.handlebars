{{#each cars as |car| }}
<div class="row mb-4 car">
  <div class="col-md-5">
    <h2>
      {{{get_emoji}}}
      <a href="/car/{{car.id}}">{{car.make_name}}</a>
      <a>{{car.car_model}}</a>
    </h2>
    <p>
      <span for="img" aria-label="Price">ðŸ’²</span>
      <span class="dollar-amount">{{car_price}}</span>
      <span class="year">{{year}}</span>
      <span class="mileage">{{mileage}}</span>
      <span class="car-color">{{color}}</span>
      <span class="salvage-title">{{salvage_title}}</span>
      <span class="transmission">{{transmission}}</span>
      
    </p>
    <p>Posted by {{car.user_id}} on {{format_date car.date_created}}</p>
  </div>
  <div class="col-md-7">
    <p>
      {{car}}
    </p>
  </div>
</div>
{{/each}}
