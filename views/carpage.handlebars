<div>
    <button class="btn btn-outline-success my-2 my-sm-0" id="back-btn" type="submit">Back</button>
</div>

{{#each cars as |car| }}
<div class="row mb-4 car">
  <div class="col-md-5">
    <h2>
      <a href="/cars/{{car.id}}">{{car.make_name}}</a>
      <a>{{car.car_model}}</a>
    </h2>
    <p>
      <span for="img" aria-label="Price">ðŸ’²</span>
      <span class="dollar-amount">{{price}}</span>
      <span class="year">{{year}}</span>
      <span class="mileage">{{mileage}}</span>
      <span class="car-color">{{color}}</span>
      <span class="salvage-title">{{salvage_title}}</span>
      <span class="transmission">{{transmission}}</span>
      
    </p>
    <p>Posted by {{car.user.name}} on {{format_date car.createdAt}}</p>
  </div>
  <div class="col-md-7">
    <p>
      {{car.make_name}}
    </p>
  </div>
</div>
{{/each}}

